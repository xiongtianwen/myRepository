<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="hello-world-app"/>
    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://192.168.0.151:2181?backup=192.168.0.151:2181,192.168.0.152:2181"/>
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" />
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.xtw.dubbo.HelloService"
                   ref="helloService" protocol="dubbo"/>

   <!-- <dubbo:service interface="com.gupaoedu.dubbo.IGpHello"
                   ref="demoService2" protocol="dubbo" version="1.0.1"
    timeout="100"/>-->

    <!-- 和本地bean一样实现服务 -->
    <bean id="helloService" class="com.xtw.dubbo.HelloServiceImpl" />
<!--
    <bean id="demoService2" class="com.gupaoedu.dubbo.GpHelloImpl2"/>-->

</beans>
